{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": "src",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
  }
  